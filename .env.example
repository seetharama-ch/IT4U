# App
APP_PUBLIC_URL=http://localhost:8060
AUTH_MODE=local

# Postgres
POSTGRES_IMAGE=postgres:16
POSTGRES_DB=it4u
POSTGRES_USER=it4u_user
POSTGRES_PASSWORD=it4u_pass_ChangeMe

# Spring DB vars (mapped to your config keys)
DB_URL=jdbc:postgresql://postgres:5432/it4u
DB_USER=it4u_user
DB_PASSWORD=it4u_pass_ChangeMe

# Attachments inside container
ATTACHMENTS_PATH=/data/attachments

# Ports
BACKEND_PORT=8060

# Optional
JAVA_OPTS=-Xms256m -Xmx1024m
